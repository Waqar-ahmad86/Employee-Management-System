@model EMSMvc.ViewModels.CreateNoticeVM
@{
    ViewData["Title"] = "Create Notice";
}

<h2 class="mb-3 fw-bold">@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Content" class="form-label"></label>
                <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ExpiresAt" class="form-label"></label>
                    <input asp-for="ExpiresAt" type="datetime-local" class="form-control" />
                    <span asp-validation-for="ExpiresAt" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Audience" class="form-label"></label>
                    <select asp-for="Audience" asp-items="Model.AudienceOptions" class="form-select"></select>
                    <span asp-validation-for="Audience" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 form-check">
                <input class="form-check-input" asp-for="IsActive" />
                <label class="form-check-label" asp-for="IsActive"></label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Create Notice</button>
                <a asp-action="Manage" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}